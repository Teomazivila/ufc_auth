{
  "name": "ufc-auth-api",
  "version": "1.0.0",
  "description": "Identity Management API with Strong Authentication - Master's Degree Project",
  "type": "module",
  "main": "src/server.js",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "dev:env": "cp src/config/development.env .env && npm run dev",
    "test": "node scripts/run-tests.js",
    "test:unit": "node --experimental-vm-modules node_modules/.bin/jest tests/unit --verbose",
    "test:integration": "node --experimental-vm-modules node_modules/.bin/jest tests/integration --verbose --runInBand",
    "test:watch": "node --experimental-vm-modules node_modules/.bin/jest --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/.bin/jest --coverage",
    "test:all": "node scripts/run-tests.js --all",
    "test:week1": "node scripts/test-week1.js",
    "test:week2": "node scripts/test-week2.js",
    "test:week3": "node scripts/test-week3.js",
    "test:week4": "node scripts/test-week4.js",
    "test:week4-simple": "node scripts/test-week4-simple.js",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "docker:build": "docker build -t ufc-auth-api .",
    "docker:run": "docker run -p 3000:3000 ufc-auth-api",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f api",
    "docker:restart": "docker compose restart api",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:reset": "node scripts/reset-db.js",
    "rbac:init": "node scripts/init-rbac.js",
    "rbac:init-admin": "CREATE_ADMIN_USER=true node scripts/init-rbac.js",
    "logs:clear": "rm -rf logs/*",
    "health": "curl -s http://localhost:3000/health | jq",
    "docs:generate": "swagger-jsdoc -d swaggerDef.js src/routes/*.js -o docs/swagger.json",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "setup": "npm install && cp env.example .env && echo 'Setup complete! Please configure your .env file.'"
  },
  "keywords": [
    "nodejs",
    "express",
    "authentication",
    "authorization",
    "jwt",
    "2fa",
    "rbac",
    "security",
    "api",
    "postgresql",
    "redis",
    "docker",
    "cybersecurity"
  ],
  "author": "UFC Auth Team",
  "license": "MIT",
  "dependencies": {
    "argon2": "^0.31.2",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "connect-redis": "^7.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.19.2",
    "express-brute": "^1.0.1",
    "express-brute-redis": "^0.0.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-openapi-validator": "^5.1.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-slow-down": "^2.0.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.8",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.11.3",
    "qrcode": "^1.5.3",
    "redis": "^4.6.12",
    "speakeasy": "^2.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "axios": "^1.10.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/config/index.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended",
      "plugin:security/recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "node/no-unsupported-features/es-syntax": "off",
      "node/no-missing-import": "off",
      "security/detect-object-injection": "off",
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "nodemonConfig": {
    "watch": [
      "src/"
    ],
    "ext": "js,json",
    "ignore": [
      "logs/",
      "tests/",
      "node_modules/"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  }
}
